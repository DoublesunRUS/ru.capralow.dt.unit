<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	
	<extension point="org.eclipse.xtext.builder.participant">
		<participant
			class="ru.capralow.dt.unit.launcher.internal.ui.ExecutableExtensionFactory:ru.capralow.dt.unit.launcher.internal.ui.xtextbuilder.UnitLauncherXtextBuilderParticipant"
			fileExtensions="bsl">
		</participant>
	</extension>
	
	<extension point="org.eclipse.ui.commands">
		<command
			id="ru.capralow.dt.unit.launcher.ui.commands.OpenFeaturesFolder"
			name="%OpenFeaturesFolder_label">
		</command>
		<command
			id="ru.capralow.dt.unit.launcher.ui.commands.AddUnitTestToModule"
			name="%AddUnitTestToModule_label">
		</command>
	</extension>
	
	<extension point="org.eclipse.ui.handlers">
		<handler
			commandId="ru.capralow.dt.unit.launcher.ui.commands.OpenFeaturesFolder"
			class="ru.capralow.dt.unit.launcher.internal.ui.ExecutableExtensionFactory:ru.capralow.dt.unit.launcher.internal.ui.xtextbuilder.OpenFeaturesFolderHandler">
		</handler>
		<handler
			commandId="ru.capralow.dt.unit.launcher.ui.commands.AddUnitTestToModule"
			class="ru.capralow.dt.unit.launcher.internal.ui.ExecutableExtensionFactory:ru.capralow.dt.unit.launcher.internal.ui.addtest.AddUnitTestToModuleHandler">
		</handler>
	</extension>
	
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:com._1c.g5.v8.dt.navigator.ui.navigator.popup">
			<command
				commandId="ru.capralow.dt.unit.launcher.ui.commands.OpenFeaturesFolder"
				style="push"
				label="%OpenFeaturesFolder_label">
 
				<visibleWhen>
					<and>
						<count value="+" />
						<iterate operator="or">
							<instanceof value="com._1c.g5.v8.dt.metadata.mdclass.Configuration" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution
			locationURI="popup:#BslEditorContext?after=additions">
			<command
				commandId="ru.capralow.dt.unit.launcher.ui.commands.AddUnitTestToModule"
				style="push"
				label="%AddUnitTestToModule_label">
 
				<visibleWhen
					checkEnabled="false">
					<and>
						<reference
							definitionId="com._1c.g5.v8.dt.bsl.Bsl.Editor.opened">
						</reference>
						<reference
							definitionId="com._1c.g5.v8.dt.bsl.Bsl.Editor.editable">
						</reference>
					</and>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	
	<extension point="com._1c.g5.v8.dt.bsl.externalMetaTypesExtension">
		<bslExternalMetaTypes
			class="ru.capralow.dt.unit.launcher.internal.ui.ExecutableExtensionFactory:ru.capralow.dt.unit.launcher.internal.ui.metatypes.FrameworkMetaTypesProvider">
		</bslExternalMetaTypes>
	</extension>

</plugin>
